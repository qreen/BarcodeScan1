<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#97CBFF"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/query_way"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            >
            <RadioButton
                android:id="@+id/rb_serial_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_serial_num"
                />
            <RadioButton
                android:id="@+id/rb_good_allocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_good_allocation"
                android:layout_marginTop="10dp"
                />
            <RadioButton
                android:id="@+id/rb_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_import"
                android:layout_marginTop="10dp"
                />
            <RadioButton
                android:id="@+id/rb_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_summary"
                android:layout_marginTop="10dp"
                />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#97CBFF"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>