<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#97CBFF"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comm_scanner"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_scan_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_head"
        >
        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:text="编号:"
            android:textSize="13dp"
            />
        <EditText
            android:id="@+id/et_serialNum"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="5"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:text="货位:"
            android:textSize="13dp"
            />
        <EditText
            android:id="@+id/et_goodsAllocation"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="5"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_scan_main_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_scan_main"
        >
        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:text="备注:"
            android:textSize="13dp"
            android:maxLength="20"
            />
        <EditText
            android:id="@+id/et_remark"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            />
        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="确认"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/ll_scan_main_end"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:padding="8dp"
            android:text="商品编号"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginRight="3dp"
            android:text="数量"
            android:textSize="13dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_scanlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:listSelector="@drawable/home_selector"
        android:layout_below="@+id/ll_list_head"
        >

    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#97CBFF"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_num_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总数量:"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:id="@+id/tv_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/tv_num_log"
            />
        <Button
            android:id="@+id/bt_complete"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="完成"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>